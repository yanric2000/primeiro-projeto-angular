@import '../../../assets/styles/variables';

/* Animation CSS */
.backdrop {
    height: 100%;
    width: 100%;
}

.spinner {
    position: absolute;
    top: calc(50% - 12.5px);
    left: calc(50% - 12.5px);
    width: 50px;
    height: 50px;
    border-top: 8px solid $primaryColor;
    border-right: 8px solid $primaryColor;
    border-bottom: 8px solid $primaryColor; 
    border-left: 8px solid #8c618d;
    border-radius: 50%;
    animation-name: spin;
    animation-duration: 3s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
        border-left: 8px solid deeppink;
    }

    25% {
        transform: rotate(360deg);
        border-left: 8px solid gold;
    }

    50% {
        transform: rotate(720deg);
        border-left: 8px solid palegreen;
    }

    75% {
        transform: rotate(1080deg);
        border-left: 8px solid aqua;
    }

    100% {
        transform: rotate(1440deg);
        border-left: 8px solid deeppink;
    }
}

.logo {
    position: absolute;
    top: calc(50% + 35px);
    left: calc(50% - 25px);
    font-family: sans-serif;
    color: $primaryColor;
    letter-spacing: 0.1em;
    margin-top: 12px;
}

/* End of animation CSS */

.callback {
    background-color: rgba($primaryColorDarker, 0.7);
    bottom: 0;
    display: none;
    flex-flow: wrap;
    height: 100%;
    left: 0;
    margin: 0;
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
    z-index: 9999;
    &.show {
        display: flex;
    }
    .loading{
        display: none;
        &.show {
            display: flex;
        }
    }
    .delete-modal{
        background-color: $fifthColor;
        border-radius: 8px;
        display: none;
        flex-flow: wrap;
        margin: auto;
        max-width: 90%;
        padding: 30px 20px;
        width: 400px;
        &.show {
            display: flex;
        }
        .warning {
            margin-bottom: 20px; 
            text-align: center;
            width: 100%;
            p {
                font-size: 1rem;
                line-height: 1.4;
                text-align: center;
                strong {
                    all: inherit;
                }
            }
        }
        button{
            margin: 0 auto !important;
        }
    }
    .response-button {
        background-color: $secondaryColorDarker;
        border: 0;
        border-radius: 8px;
        cursor: pointer;
        display: none;
        margin: auto;
        max-width: 90%;
        padding: 30px 20px;
        transition: all 0.15s ease-in-out;
        width: 400px;
        &.show {
            display: block;
        }
        &:hover {
            filter: grayscale(50%);
        }
        p {
            color: $primaryColor;
            font-size: 1.6rem;
            font-weight: 600;
            text-align: center;
        }
    }
}

form {
    background-color: $fifthColorLighter;
    border-radius: 16px;
    padding: 64px;
    width: 100%;
    &::after  {
        background-color: $fifthColor;
        content: '';
        height: calc(100% + 12px);
        pointer-events: none;
        z-index: -1;
        width: calc(100% + 12px);
    }
    h2 {
        font-size: 2.1rem;
        font-weight: 600;
        margin-bottom: 48px;
        text-align: left;
    }
    .row {
        align-items: center;
        display: flex;
        flex-flow: row;
        justify-content: space-between;
        width: 100%;
        .container-input {
            height: 50px;
            margin-bottom: 46px;
            margin-top: 22px;
            position: relative;
            width: 46%;
            span {
                font-size: 1rem;
                left: 0;
                position: absolute;
                top: -20px;
            }
            input {
                background-color: transparent;
                color: $primaryColor;
                font-size: 1.5rem;
                font-weight: 400;
                height: 100%;
                text-indent: 0;
                width: 100%;
                &::placeholder {
                    color: $primaryColor;
                }
                &:focus {
                    color: $secondaryColor;

                    & + .border-bottom::after {
                        background-color: $secondaryColor;
                        width: 100%;
                    }
                }
            }
            .border-bottom {
                background-color: #FFF;
                border-bottom: 0 !important;
                bottom: 0;
                height: 2px;
                position: absolute;
                width: 100%;
                &::after {
                    background-color: green;
                    bottom: 0;
                    content: '';
                    height: 100%;
                    left: 0;
                    position: absolute;
                    transition: 0.2s ease-in-out;
                    width: 0%;
                }
            }
        }
    }
    h4 {
        font-size: 1.25rem;
        font-weight: 500;
        margin-bottom: 26px;
    }
    .row-plataform {
        display: flex;
        flex-flow: row wrap;
        margin-bottom: 12px;
        .plataform {
            border: 2px solid $primaryColor;
            margin-bottom: 24px;
            margin-right: 60px;
            padding: 0;
            position: relative;
            width: 20%;
            &:last-child {
                margin-right: 0;
            }
            input {
                display: none;
            }
            input[type='checkbox']:checked + label .container-svg {
                filter: grayscale(0%);
            }
            label {
                background-color: transparent;
                cursor: pointer;
                display: block;
                padding: 32px;
                transition: background-color 0.2s ease-in-out;
                width: 100%;
                &:hover {
                    background-color: rgba($primaryColor, 0.6);
                }
                &.active {
                    background-color: rgba($primaryColor, 0.6);

                    &:hover {
                        background-color: rgba($primaryColor, 0.4);
                    }
                }
                .container-svg {
                    filter: grayscale(100);
                    height: 100%;
                    transition: filter 0.2s ease-in-out;
                    width: 100%;

                    & > * {
                        height: 100%;
                        width: 100%;
                    }
                }
            }
        }
    }
    .container-buttons {
        display: flex;
        flex-flow: row;
        justify-content: flex-end;
        width: 100%;
    }
}

@media (max-width: 950px) {
    form {
        padding: 48px;
        .row-plataform {
            .plataform {
                width: 25%;
            }
        }
    }
}

@media (max-width: 800px) {
    form {
        .row-plataform {
            .plataform {
                label {
                    padding: 24px;
                }
            }
        }
    }
}

@media (max-width: 700px) {
    form {
        border-width: 10px;
        padding: 32px;
        h2 {
            margin-bottom: 32px;
        }
        .row {
            flex-flow: column;
            margin-bottom: 12px;
            .container-input {
                margin-bottom: 22px;
                width: 100%;
            }
        }
        .row-plataform {
            .plataform {
                margin-right: 30px;
                label {
                    padding: 16px;
                }
            }
        }
    }
}

@media (max-width: 640px) {
    form {
        .row-plataform {
            .plataform {
                width: 30%;
            }
        }
    }
}

@media (max-width: 568px) {
    form {
        border-width: 6px;
        .row-plataform {
            flex-flow: wrap;
            .plataform {
                margin-bottom: 24px;
                margin-right: 24px;
                min-width: 90px;
                &:last-child {
                    margin-right: 24px;
                }
                label {
                    padding: 16px;
                }
            }
        }
    }
}

@media (max-width: 400px) {
    form {
        padding: 16px;
        h4 {
            margin-bottom: 12px;
        }
        .row-plataform {
            flex-flow: wrap;
            .plataform {
                margin: 14px 16px !important;
                width: 90px;
            }
        }
    }
}

@media (max-width: 370px) {
    form {
        padding: 16px;
        h4 {
            margin-bottom: 12px;
        }
        .row-plataform {
            align-items: center;
            flex-flow: column;
            .plataform {
                margin: 14px 0 !important;
            }
        }
        .container-buttons {
            flex-flow: wrap;
            justify-content: center;
            button, a {
                margin: 0 auto !important;
            }
        }
    }
}